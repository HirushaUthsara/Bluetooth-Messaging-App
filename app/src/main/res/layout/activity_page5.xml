<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".page4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDF9F7">

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="4sp"
            android:layout_marginTop="4sp"
            ></ImageView>

        <TextView
            android:id="@+id/contactname"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Group 1"
            android:textSize="30dp">
            </TextView>

        <Button
            android:id="@+id/onlineusersbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ONLINE\nUSERS"
            android:drawableRight="@drawable/onlinebubble"
            android:textSize="10sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5sp"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groupchatmessages_ADM"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp">
        <EditText
            android:id="@+id/typingtext"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint=" New Message"
            android:background="@drawable/roundbuton"
            android:backgroundTint="#FDF9F7"
            android:layout_marginEnd="5sp"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/purple_500">
        </EditText>

        <Button
            android:id="@+id/sendbutton"
            android:layout_width="50sp"
            android:background="@drawable/roundbuton"
            android:layout_height="match_parent"
            android:textColor="#FDF9F7"
            app:icon="@drawable/ic_baseline_send_24"></Button>
    </LinearLayout>



</LinearLayout>